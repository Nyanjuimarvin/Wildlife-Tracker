{{#partial "content"}}

    <div class="container">

        <div class="row row-cols-1 row-cols-md-3 g-3">
            {{#each eAnimals}}
                <div class="col">

                    <div class="card h-100">
                        <div class="card-header mb-3">
                            <h3 class="text-center fw-bold text-white text-uppercase mt-3">Animal Risk</h3>
                        </div>
                        <h6 class="text-star ms-4 me-2">{{name}}</h6>
                        <p class="text-start ms-4 me-2">{{health}}</p>
                        <p class="text-start ms-4 me-2">{{Age}}</p>
                        <p class="text-start ms-4 me-2">{{location}}</p>
                        <div class="card-footer">
                            <p>{{timeRecorded}}</p>
                            <p></p>
                        </div>

                    </div>

                </div>
            {{/each}}
        </div>
    </div>
{{/partial}}
{{>layout.hbs}}