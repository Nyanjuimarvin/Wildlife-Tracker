{{#partial "content"}}
<div class="row ranger-form pt-5">
    <div class="col-md-4"></div>
<div class="col-md-4 p-5 rounded bg-success bg-opacity-50 mt-5">
    <form action="/rangers" method="post">
        <div class="form-group mb-4">
            <label for="name" class="fs-4 text-white mb-2">Name:</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group mb-4">
            <label for="maxSize" class="fs-4 mb-2">Badge Id:</label>
            <input type="number" class="form-control" id="badgeId" name="badgeId" placeholder="From 1 to 100000">
        </div>
        <div class="form-group mb-4">

            <label for="cause" class="fs-4 mb-2">Contact</label>
            <input type="number" class="form-control" id="contact" name="contact" placeholder="Must take on this form: 123-456-789012">
        </div>

        <button class="btn fs-3 mt-5 fw-bolder btn-outline-success d-block mx-auto" type="submit">Login</button>
    </form>
</div>
<div class="col-md-4"></div>
</div>
{{/partial}}
{{>layout.hbs}}